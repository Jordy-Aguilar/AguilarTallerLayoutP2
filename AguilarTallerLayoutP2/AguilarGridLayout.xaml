<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AguilarTallerLayoutP2.AguilarGridLayout"
             Title="AguilarGridLayout">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <BoxView Grid.Row="0" Grid.Column="0" Color="Purple" />
        <BoxView Grid.Row="0" Grid.Column="1" Color="Black" />
        <BoxView Grid.Row="1" Grid.Column="0" Color="Red" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="White"
            x:Name="BotonGridLayout"
            Text="Ir a la segunda pagina (StackLayout)." 
            TextColor="Black"
            FontAttributes="Bold"
            FontSize="30"
            Clicked="BotonGridLayout_Clicked_1"/>
    </Grid>
</ContentPage>
