<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AguilarTallerLayoutP2.AguilarStackLayout"
             Title="Jordy Aguilar (StackLayout)"
             BackgroundImageSource="https://images2.alphacoders.com/136/thumb-1920-1360086.png">
    
        <VerticalStackLayout Margin="20,35,20,25">
            <Label Text="Pagina usando StackLayout" 
                   FontSize="30"
                   FontFamily="Arial"
                   FontAttributes="Bold"
                   TextColor="Black"/>
            <Label Text="Jordy Aguilar" 
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#FF1493"
                   FontFamily="Arial"/>
            <Label Text="17 de noviembre del 2024" />
             
        <Button
x:Name="BotonStackLayout"
Text="Siguiente Pagina"
FontAttributes="Bold"
FontSize="30"
FontFamily="Arial"
TextColor="White"
BackgroundColor="Black"
BorderColor="#FF1493"
BorderWidth="2"
Clicked="BotonStackLayout_Clicked"/>
            
    </VerticalStackLayout>

    
</ContentPage>